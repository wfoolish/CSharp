<Window x:Class="XCeedWPFDemo.ButtonChromeDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XCeedWPFDemo"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="ButtonChromeDemo" Height="450" Width="800">
    <Grid>
        <xctk:ButtonChrome MaxWidth="200" MaxHeight="75" CornerRadius="10" RenderChecked="False" RenderEnabled="True">
            <StackPanel>
                <StackPanel.Resources>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="FontSize" Value="22"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                </StackPanel.Resources>
                <TextBlock>First Line</TextBlock>
                <TextBlock>First Line</TextBlock>
            </StackPanel>
        </xctk:ButtonChrome>
    </Grid>
</Window>
