<UserControl x:Class="BCDemo.Views.Chapter1.WindowContainerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BCDemo.Views.Chapter1"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <xctk:WindowContainer ModalBackgroundBrush="AliceBlue">
            <xctk:ChildWindow WindowBackground="Pink" Left="100" Top="10" Width="275" Height="125" TextBlock.TextAlignment="Center">
                <TextBlock>第一个childWindow</TextBlock>
            </xctk:ChildWindow>
            <xctk:ChildWindow WindowBackground="LightCoral" Left="100" Top="150" Width="275" Height="125" TextBlock.TextAlignment="Center">
                <TextBlock>第二个childWindow</TextBlock>
            </xctk:ChildWindow>
            <xctk:MessageBox Caption="MessageBox" Text="这是一个messageBox">
                
            </xctk:MessageBox>
        </xctk:WindowContainer>
    </Grid>
</UserControl>
